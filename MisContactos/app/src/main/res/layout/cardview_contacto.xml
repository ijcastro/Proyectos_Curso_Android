<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cvCornerRadius">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFotoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/jumping_woman"/>

        <TextView
            android:id="@+id/tvNombreContacto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvNombreContacto2"
            android:textSize="@dimen/tvNombreContacto2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTelefonoContacto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ptelefono"
            android:textSize="15sp"/>


    </LinearLayout>




</androidx.cardview.widget.CardView>